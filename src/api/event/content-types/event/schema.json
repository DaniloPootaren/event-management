{
  "kind": "collectionType",
  "collectionName": "events",
  "info": {
    "singularName": "event",
    "pluralName": "events",
    "displayName": "event",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "richtext",
      "required": true
    },
    "start_date": {
      "type": "datetime",
      "required": true
    },
    "banner": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "ART",
        "BUSINESS",
        "EDUCATION",
        "FESTIVAL",
        "FOOD",
        "NIGHTLIFE",
        "SPORTS"
      ],
      "required": true
    },
    "location": {
      "type": "json",
      "required": true
    },
    "event_detail": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::event-detail.event-detail",
      "inversedBy": "event"
    },
    "end_date": {
      "type": "datetime"
    }
  }
}
